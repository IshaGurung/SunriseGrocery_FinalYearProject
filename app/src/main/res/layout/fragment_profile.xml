<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".home.fragments.ProfileFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/primaryColor">



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="More"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="18sp"

                />


        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="10dp"
        android:paddingEnd="10dp">


        <TextView
            android:id="@+id/profileTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/normal_spacing"
            android:layout_marginTop="75dp"
            android:layout_marginRight="@dimen/normal_spacing"
            android:padding="@dimen/normal_spacing"
            android:text="   My Profile"
            android:background="@drawable/boxshape"
            android:drawableLeft="@drawable/ic_baseline_person_24"
            android:drawableRight="@drawable/ic_baseline_keyboard_arrow_right_24"
            android:textColor="#455A64"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/OrderhistoryTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/normal_spacing"
            android:layout_marginTop="10dp"
            android:layout_marginRight="@dimen/normal_spacing"
            android:padding="@dimen/normal_spacing"
            android:text="   My Order History"
            android:background="@drawable/boxshape"
            android:drawableLeft="@drawable/ic_baseline_history_24"
            android:drawableRight="@drawable/ic_baseline_keyboard_arrow_right_24"
            android:textColor="#455A64"
            android:textSize="16sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/contactusTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/normal_spacing"
            android:layout_marginTop="10dp"
            android:layout_marginRight="@dimen/normal_spacing"
            android:padding="@dimen/normal_spacing"
            android:text="   Contact Us"
            android:drawableLeft="@drawable/ic_baseline_contact_phone_24"
            android:drawableRight="@drawable/ic_baseline_keyboard_arrow_right_24"
            android:background="@drawable/boxshape"
            android:textColor="#455A64"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/aboutusTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/normal_spacing"
            android:layout_marginTop="10dp"
            android:layout_marginRight="@dimen/normal_spacing"
            android:padding="@dimen/normal_spacing"
            android:text="   About Us"
            android:drawableLeft="@drawable/ic_baseline_person_24"
            android:drawableRight="@drawable/ic_baseline_keyboard_arrow_right_24"
            android:background="@drawable/boxshape"
            android:textColor="#455A64"
            android:textSize="16sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/logOutTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/normal_spacing"
            android:layout_marginTop="10dp"
            android:layout_marginRight="@dimen/normal_spacing"
            android:padding="@dimen/normal_spacing"
            android:text="Log Out"
            android:drawableRight="@drawable/ic_baseline_login_24"
            android:background="@drawable/boxshape"
            android:textColor="#455A64"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/adminAreaTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/normal_spacing"
            android:drawableRight="@drawable/ic_baseline_admin_panel_settings_24"
            android:padding="@dimen/normal_spacing"
            android:background="@drawable/boxshape"
            android:text="Admin Area"
            android:textColor="#455A64"
            android:textSize="16sp"
            android:textStyle="bold"
            android:visibility="gone" />


    </LinearLayout>

</RelativeLayout>